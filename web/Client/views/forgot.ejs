<div class="sign-in-background-img">

<div class="fix-margin2">
  <div class="login-div col-md-6">
    <div class="row">
        <!-- <div class="col-md-6 pic-side">
            <img class="img-login" src="/img/gym-background.jpg" alt="">
        </div> -->
          <div class="col-md-12 login-side">
            <div><img src="/img/mainLogo.png" class="center-login-main-logo"/></div>
              <form action="/auth/reset" method="POST">
                  <h2 class="login-title">Forgot Password</h2>
                  <p style="color: red;"><%= locals.message != null ? message : "" %></p>
                  <div class="form-group">
                      <input type="text" class="form-control" name="userName" id="username" placeholder="Email">
                  </div>
                  <div class="form-group">
                      <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                  </div>
                  <button type="submit" class="btn  btn-block button-login">Submit</button>

              </form>
          </div>
      </div>
  </div>
</div>
</div>
